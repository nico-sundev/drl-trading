# Development environment configuration for drl-trading-ingest
# Copy this file to .env and update values as needed

# Deployment stage (local/cicd/prod)
STAGE=local

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=trading_user
DB_PASSWORD=dev_password_123
DB_NAME=trading_ingest

# Data source API configuration
DATA_PROVIDER_API_KEY=dev_data_api_key_placeholder
DATA_PROVIDER_URL=https://api.sandbox.dataprovider.com
FOREX_API_KEY=dev_forex_api_key_placeholder

# Messaging configuration
KAFKA_HOST=localhost
KAFKA_PORT=9092

# Data ingestion configuration
SYMBOLS=EURUSD,GBPUSD,USDJPY
TIMEFRAMES=M1,M5,H1,H4,D1
INGESTION_INTERVAL=60

# Storage configuration
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed

# Logging configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json
