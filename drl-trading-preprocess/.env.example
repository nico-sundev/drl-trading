# Development environment configuration for drl-trading-preprocess
# Copy this file to .env and update values as needed

# Deployment stage (local/cicd/prod)
STAGE=local

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=trading_user
DB_PASSWORD=dev_password_123
DB_NAME=trading_preprocess

# Feature store configuration
FEAST_REPO_PATH=./feature_repo
FEATURE_STORE_ONLINE_URL=localhost:6379
FEATURE_STORE_OFFLINE_URL=postgresql://trading_user:dev_password_123@localhost:5432/trading_features

# Data processing configuration
INPUT_DATA_PATH=./data/raw
OUTPUT_DATA_PATH=./data/processed
BATCH_SIZE=1000

# Messaging configuration
KAFKA_HOST=localhost
KAFKA_PORT=9092

# Processing configuration
MAX_PROCESSING_TIME=1800
PARALLEL_WORKERS=4

# Logging configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json
