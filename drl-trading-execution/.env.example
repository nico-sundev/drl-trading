# Development environment configuration for drl-trading-execution
# Copy this file to .env and update values as needed

# Deployment stage (local/cicd/prod)
STAGE=local

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=trading_user
DB_PASSWORD=dev_password_123
DB_NAME=trading_execution

# Broker/Exchange API configuration
BROKER_API_URL=https://api.sandbox.broker.com
BROKER_API_KEY=sandbox_api_key_placeholder
BROKER_API_SECRET=sandbox_api_secret_placeholder

# Risk management
MAX_POSITION_SIZE=0.01
MAX_DAILY_LOSS=100.00
RISK_TOLERANCE=medium

# Messaging configuration
KAFKA_HOST=localhost
KAFKA_PORT=9092

# Logging configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Service-specific configuration
ORDER_TIMEOUT=30
EXECUTION_DELAY=0
