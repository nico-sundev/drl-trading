# Development environment configuration for drl-trading-inference
# Copy this file to .env and update values as needed

# Deployment stage (local/cicd/prod)
STAGE=local

# Database configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_USER=trading_user
DB_PASSWORD=dev_password_123
DB_NAME=trading_inference

# Kafka/Messaging configuration
KAFKA_HOST=localhost
KAFKA_PORT=9092

# API Keys and secrets
TRADING_API_KEY=dev_api_key_placeholder
TRADING_API_SECRET=dev_api_secret_placeholder

# Model configuration
MODEL_PATH=/app/models
FEAST_REPO_PATH=./feature_repo

# Logging configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Service-specific configuration
INFERENCE_BATCH_SIZE=32
INFERENCE_TIMEOUT=30
